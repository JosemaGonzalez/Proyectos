font16 = 16px
font5 = 5px
centrar = 0 auto
negro = black
blanco = white
azul = navy

dimension = 1200px

*
	margin: centrar

body
	font-size: font16
	font-family: 'Open Sans', sans-serif
	color: blanco
	max-width: dimension
	text-shadow:(font16/8) (font16/8) 0 rgba(0,0,0,.3);
header,nav
	border-radius:font5
aside
	border: font5 solid azul
	border-radius:font5
	display:block
	margin:2%
	padding: font5*2
	@media screen and (max-width:550px)
		width:60%
	a
		text-decoration:none
article
	display: inline-block
footer
	max-width:dimension
	background:rgba(70,130,180,.5)
	@media screen and (max-width:440px)
		display:none
	ul
		font-size:0
		padding:0
		text-align: center
		width:100%
		li
			display: inline-block
			font-size:(font16/2)+1
			height:font5*5
			line-height:font5*5
			margin: 0 5%
			padding:font5*2 0
			vertical-align: top
			width:10%
			img
				height:font5*5
			&:hover
				background:rgba(70,130,180,.7)
				box-shadow: inset blanco 0px (font16/2) (font16/2)
footer ul li a,nav ul li a
	color: azul
	font-weight:bold
	text-align: center
	text-decoration: none
	text-transform:uppercase
nav ul
	font-size:0
	padding:0
	li
		background:rgba(70,130,180,.5)
		display: inline-block
		font-size:font16
		height:font5*10
		line-height:font5*10
		padding:(font5*2) 0
		vertical-align: top
		width:25%
		&:hover
			background:rgba(70,130,180,.7)
			box-shadow: inset blanco 0px (font16/2) (font16/2)
		img
			height:font5*10
			@media screen and (max-width:800px)
				height:80%
		a:hover
			color:blanco
		@media screen and (max-width: 800px)
			width:50%

section
	text-align:center
	width: 70%
	@media screen and (max-width:550px)
		width:100%

	article
		border:(font16/8) solid azul
		border-radius:font5
		box-shadow: font5 font5 font5 steelblue
		color: negro
		font-size:(font16*0.8)
		margin:1%
		padding:font5*2
		width:font5*30
		img
			transition:.3s;
			-webkit-transition:.3s
			-moz-transition:.3s
			-ms-transition:.3s
			-o-transition:.3s
			box-shadow: (font16/2) (font16/2) (font5*2) steelblue
			height: font5*30
			width: font5*30
section,aside
	display:inline-block
	vertical-align:top
#contenedor
	background:lightcyan
	display: inline-block
	max-width:dimension
	text-align: center
.personales
		padding-bottom: (font16/2)
		h2
			text-shadow:(font16/8) (font16/8) (font5*2) blanco

.publicidad img
	height:font5*24
	padding-bottom:font16*2
	width:font5*24
	@media screen and (max-width:800px)
		height: (font5*18)
		padding: font16 font16
		width: (font5*18)
.publicidad_titulo
	padding:font16 font16
	@media screen and (max-width:800px)
		h2
			font-size:font16
	@media screen and (max-width:550px)
		h2
			font-size:(font16*1.5)
.Redes_sociales img
	height:font16*4
	width:font16*4

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josema.baloncesto.MainActivity"
    android:background="@drawable/foto_19907"
    android:layout_width="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="167dp"
            android:layout_height="181dp"
            app:srcCompat="@drawable/camiseta2"
            android:id="@+id/imageView2"
            android:layout_column="0"
            android:layout_row="0" />

        <ImageView
            android:layout_width="198dp"
            android:layout_height="179dp"
            app:srcCompat="@drawable/camiseta1"
            android:id="@+id/imageView"
            android:layout_column="2"
            android:layout_row="0" />

        <GridLayout
            android:layout_width="216dp"
            android:layout_height="177dp"
            android:layout_column="1"
            android:layout_row="0"
            android:rowCount="3"
            android:columnCount="3">

            <TextView
                android:text="Marcador"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:id="@+id/textView"
                android:layout_column="0"
                tools:text="Marcador"
                android:textSize="36sp"
                android:textColor="@android:color/background_light"
                android:layout_row="0"
                android:layout_columnSpan="3"
                android:layout_gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="0"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVisitante"
                tools:text="0"
                android:textColor="@android:color/background_light"
                android:textSize="60sp"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLocal"
                tools:text="0"
                android:textColor="@android:color/background_light"
                android:textSize="60sp"
                android:textAlignment="center" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:columnCount="7">

            <Button
                android:text="Reiniciar"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonReset"
                android:layout_column="3"
                android:layout_marginTop="10dp"
                android:onClick="reiniciar" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/unpunto"
                android:id="@+id/l1"
                android:layout_column="0"
                android:onClick="sumar" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dospuntos"
                android:id="@+id/l2"
                android:layout_column="1"
                android:onClick="sumar" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/trespuntos"
                android:id="@+id/l3"
                android:layout_column="2"
                android:onClick="sumar" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/unpunto"
                android:id="@+id/v1"
                android:layout_column="4"
                android:onClick="sumar" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dospuntos"
                android:id="@+id/v2"
                android:layout_column="5"
                android:onClick="sumar" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/trespuntos"
                android:id="@+id/v3"
                android:layout_column="6"
                android:onClick="sumar" />
        </GridLayout>

    </GridLayout>
</RelativeLayout>
